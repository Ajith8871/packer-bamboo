{
    "builders": [
        {
            "type": "amazon-ebs",
            "source_ami": "ami-6ab6a80c",
            "region": "eu-west-1",
            "instance_type": "t2.micro",
            "ami_name": "packer {{timestamp}}",
            "user_data_file": "./scripts/SetUpWinRM.ps1",
            "communicator": "winrm",
            "winrm_username": "Administrator",
            "winrm_use_ssl": true,
            "winrm_insecure": true
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "scripts": [
                "./scripts/EC2Config.ps1",
                "./scripts/BundleConfig.ps1",
                "./scripts/SetUpDevTools.ps1"
            ]
        },
        {
            "type": "powershell",
            "inline": [
                "choco install Pester -y"
            ]
        },
        {
            "type": "file",
            "source": "tests",
            "destination": "C:/Windows/Temp"
        },
        {
            "type": "powershell",
            "inline": [
                "Invoke-Pester C:/Windows/Temp/* -OutputFile TestResults.xml -OutputFormat NUnitXml"
            ]
        },
        {
            "type": "file",
            "source": "TestResults.xml",
            "destination": "TestResults.xml",
            "direction": "download"
        }
    ]
}